@model IEnumerable<Product>

<div class="container">
    <!-- Search Form -->
    <div class="row pb-3">
        <div class="col-12">
            <form asp-action="Index" method="get" class="d-flex align-items-center justify-content-between">
                <!-- Search Input -->
                <div class="d-flex flex-grow-1">
                    <input type="text" name="searchString" class="form-control me-2" placeholder="Search products..." />
                    <select name="category" class="form-select me-2">
                        <option value="">All Categories</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Name">@category.Name</option>
                        }
                    </select>
                </div>
                <!-- Search Button -->
                <button type="submit" class="btn btn-primary ms-2">Search</button>
            </form>
        </div>
    </div>

    <!-- Product Display Section -->
    <div class="row pb-3">
        @if (!Model.Any())
        {
            <div class="col-12 text-center">
                <p class="text-muted">No products available.</p>
            </div>
        }
        else
        {
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card border-0 shadow-sm rounded h-100 d-flex flex-column">
                        <!-- Product Image -->
                        @if (product.ProductImages != null && product.ProductImages.Count > 0)
                        {
                            <img src="@product.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded-top" alt="@product.Name" />
                        }
                        else
                        {
                            <img src="https://placehold.co/400x400/png" class="card-img-top rounded-top" alt="@product.Name" />
                        }

                        <!-- Product Details -->
                        <div class="card-body text-center flex-grow-1">
                            <h6 class="card-title text-dark text-uppercase">
                                @product.Name
                                (@product.ModelNumber)
                            </h6>
                            <p class="text-muted mb-1">Brand: <strong>@product.Brand</strong></p>

                            <!-- Price Section -->
                            <p class="mb-1 text-muted">
                                <strong>List Price:</strong>
                                <span class="text-decoration-line-through">@product.ListPrice.ToString("$#,##")</span>
                            </p>
                            <p class="mb-2 text-success">
                                <strong>Discount Price:</strong> @product.DiscountPrice.ToString("$#,##")
                            </p>
                        </div>

                        <!-- Product Footer -->
                        <div class="card-footer p-2">
                            <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
