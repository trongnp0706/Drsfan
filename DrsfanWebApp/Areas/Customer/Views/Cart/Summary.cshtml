@model ShoppingCartVM

<form method="post">
    <div class="container py-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary bg-gradient text-white py-3">
                <div class="row px-4">
                    <div class="col-6">
                        <h5 class="pt-2">Order Summary</h5>
                    </div>
                    <div class="col-6 text-end">
                        <a class="btn btn-outline-light btn-sm">Back to Cart</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <!-- Shipping Details -->
                        <div class="col-12 col-lg-6 pb-4">
                            <h4 class="text-info mb-4">Shipping Details</h4>
                            <div class="form-group row">
                                <label for="Name" class="col-3 col-form-label">Name</label>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.Name" class="form-control" placeholder="Full Name" />
                                    <span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="PhoneNumber" class="col-3 col-form-label">Phone</label>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.PhoneNumber" class="form-control" placeholder="Phone Number" />
                                    <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="StreetAddress" class="col-3 col-form-label">Street Address</label>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.StreetAddress" class="form-control" placeholder="Street Address" />
                                    <span asp-validation-for="OrderHeader.StreetAddress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="City" class="col-3 col-form-label">City</label>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.City" class="form-control" placeholder="City" />
                                    <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="State" class="col-3 col-form-label">State</label>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.State" class="form-control" placeholder="State" />
                                    <span asp-validation-for="OrderHeader.State" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="PostalCode" class="col-3 col-form-label">Postal Code</label>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.PostalCode" class="form-control" placeholder="Postal Code" />
                                    <span asp-validation-for="OrderHeader.PostalCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Order Summary -->
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="text-info mb-4">Order Summary</h4>
                            <ul class="list-group mb-3">
                                @foreach (var details in Model.ShoppingCartList)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="my-0">@details.Product.Name</h6>
                                            <small class="text-muted">Quantity: @details.Count</small>
                                        </div>
                                        <span class="text-muted">@((details.Price * details.Count).ToString("$#,##"))</span>
                                    </li>
                                }
                                <li class="list-group-item d-flex justify-content-between bg-light">
                                    <small class="text-info">Total (USD)</small>
                                    <strong class="text-info">@Model.OrderHeader.OrderTotal.ToString("$#,##")</strong>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-light">
                <div class="row">
                    <div class="col-12 col-md-8 pt-2">
                        <p class="text-muted" style="font-size:14px;">
                            Estimate Arrival Date:
                            <strong>@DateTime.Now.AddDays(7).ToShortDateString()</strong> -
                            <strong>@DateTime.Now.AddDays(14).ToShortDateString()</strong>
                        </p>
                    </div>
                    <div class="col-12 col-md-4">
                        <button type="submit" class="btn btn-primary form-control">Place Order</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
