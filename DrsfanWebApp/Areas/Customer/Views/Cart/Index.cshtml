@model ShoppingCartVM

<form method="post">
    <div class="card shadow border-0 mt-4">
        <!-- Header Section -->
        <div class="card-header bg-primary text-white py-4">
            <div class="row">
                <div class="col-6">
                    <h4 class="mb-0 text-uppercase">Shopping Cart</h4>
                </div>
                <div class="col-6 d-flex justify-content-end">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-light btn-sm">
                        Continue Shopping
                    </a>
                </div>
            </div>
        </div>

        <!-- Cart Items Section -->
        <div class="card-body">
            @if (!Model.ShoppingCartList.Any())
            {
                <div class="text-center py-5">
                    <h5 class="text-muted">Your cart is currently empty.</h5>
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                        Start Shopping
                    </a>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var item in Model.ShoppingCartList)
                    {
                        <div class="col-12 mb-4">
                            <div class="d-flex align-items-center border-bottom pb-3">
                                <!-- Product Image -->
                                <div class="col-lg-2 col-md-3 col-sm-4 text-center">
@*                                     <img src="@item.Product.ImageUrl" class="img-fluid rounded shadow-sm" alt="@item.Product.Name" />
 *@                                </div>

                                <!-- Product Details -->
                                <div class="col-lg-6 col-md-5 col-sm-8">
                                    <h6 class="text-uppercase text-secondary">@item.Product.Name</h6>
                                    <small class="text-muted">Price: @item.Price.ToString("$#,##")</small>
                                    <p class="text-muted">Quantity: @item.Count</p>
                                </div>

                                <!-- Quantity Control -->
                                <div class="col-lg-2 col-md-2 col-sm-12 d-flex justify-content-center align-items-center">
                                    <div class="btn-group">
                                        <a asp-action="minus" asp-route-cartId="@item.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-dash"></i>
                                        </a>
                                        <a asp-action="plus" asp-route-cartId="@item.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-plus"></i>
                                        </a>
                                    </div>
                                </div>

                                <!-- Remove Item -->
                                <div class="col-lg-2 col-md-2 col-sm-12 text-center">
                                    <a asp-area="Customer" asp-controller="Cart" asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Remove
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Footer Section -->
        @if (Model.ShoppingCartList.Any())
        {
            <div class="card-footer bg-light">
                <div class="row">
                    <!-- Total Price -->
                    <div class="col-md-4 offset-md-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="text-uppercase text-dark">Total (USD):</h5>
                            <h4 class="text-primary">@Model.OrderHeader.OrderTotal.ToString("$#,##")</h4>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 offset-md-5">
                        <a asp-action="Summary" class="btn btn-primary w-100 py-2">
                            Proceed to Checkout
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</form>
