@model Category

<div class="card shadow border-0 mt-4">
    <!-- Card Header -->
    <div class="card-header bg-dark bg-gradient py-3 text-center">
        <h2 class="text-white mb-0">Create Category</h2>
    </div>

    <!-- Card Body -->
    <div class="card-body p-4">
        <form method="post" novalidate>
            <!-- Category Name -->
            <div class="mb-4">
                <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                <input asp-for="Name" class="form-control shadow-sm" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Display Order -->
            <div class="mb-4">
                <label asp-for="DisplayOrder" class="form-label fw-bold">Display Order</label>
                <input asp-for="DisplayOrder" class="form-control shadow-sm" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-start">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-check-circle"></i> Create
                </button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
