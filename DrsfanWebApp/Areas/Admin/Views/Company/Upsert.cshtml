@model Company
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-black bg-gradient py-3 text-center">
        <h2 class="text-white">@(Model.Id!=0?"Update":"Create") Company</h2>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="mb-4">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control shadow-sm" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Address" class="form-label fw-bold"></label>
                            <input asp-for="Address" class="form-control shadow-sm" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="City" class="form-label fw-bold"></label>
                            <input asp-for="City" class="form-control shadow-sm" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="State" class="form-label fw-bold"></label>
                            <input asp-for="State" class="form-control shadow-sm" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                            <input asp-for="PhoneNumber" class="form-control shadow-sm" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="PostalCode" class="form-label fw-bold"></label>
                            <input asp-for="PostalCode" class="form-control shadow-sm" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                    <div class="d-flex justify-content-start">
                        @if (Model.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary me-2">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary me-2">Create</button>
                        }

                        <a asp-controller="Company" asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>

                </div>

            </div>

        </form>
        <partial name="_ValidationScriptsPartial" />
    </div>
</div>


@section Scripts{
    
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
