@{
    ViewData["Title"] = "Image Synchronization";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="text-primary">Image Synchronization</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="ImageSync" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-arrow-repeat"></i> Sync Again
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (ViewBag.SyncResult != null && ViewBag.SyncResult.Count > 0)
            {
                <div class="alert alert-info">
                    <h5 class="alert-heading">Synchronization Results</h5>
                    <ul class="list-unstyled mb-0">
                        @foreach (var result in ViewBag.SyncResult)
                        {
                            <li class="mb-2">
                                <i class="bi bi-info-circle me-2"></i>@result
                            </li>
                        }
                    </ul>
                </div>
            }
            else
            {
                <div class="alert alert-success">
                    <h5 class="alert-heading">No Changes Required</h5>
                    <p class="mb-0">All images are synchronized between the file system and database.</p>
                </div>
            }
        </div>
    </div>
</div> 