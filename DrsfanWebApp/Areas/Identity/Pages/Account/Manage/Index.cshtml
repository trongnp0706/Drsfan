@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="mb-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-8 mx-auto">
        <form id="profile-form" method="post" class="needs-validation">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- Account Information Section -->
            <h5 class="text-primary">Account Information</h5>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Username" disabled />
                <label asp-for="Username" class="form-label"><i class="bi bi-person-circle me-2"></i>Username</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Your Name" />
                <label asp-for="Input.Name" class="form-label"><i class="bi bi-person me-2"></i>Your Name</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <!-- Contact Information Section -->
            <h5 class="text-primary mt-4">Contact Information</h5>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                <label asp-for="Input.PhoneNumber" class="form-label"><i class="bi bi-telephone me-2"></i>Phone Number</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Address Section -->
            <h5 class="text-primary mt-4">Address Information</h5>
            <div class="form-floating mb-3">
                <input asp-for="Input.StreetAddress" class="form-control" placeholder="Street Address" />
                <label asp-for="Input.StreetAddress" class="form-label"><i class="bi bi-house-door me-2"></i>Street Address</label>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.City" class="form-control" placeholder="City" />
                <label asp-for="Input.City" class="form-label"><i class="bi bi-building me-2"></i>City</label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="row g-2">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.State" class="form-control" placeholder="State" />
                        <label asp-for="Input.State" class="form-label"><i class="bi bi-geo me-2"></i>State</label>
                        <span asp-validation-for="Input.State" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.PostalCode" class="form-control" placeholder="Postal Code" />
                        <label asp-for="Input.PostalCode" class="form-label"><i class="bi bi-mailbox me-2"></i>Postal Code</label>
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Save Button -->
            <button id="update-profile-button" type="submit" class="btn btn-primary w-100">
                <i class="bi bi-save2 me-2"></i>Save Changes
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
